{
  "name": "hyundai-wnp",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "nodemon --watch src --ext js,ejs,css --exec \"node src/server.js\"",
    "start": "NODE_ENV=production node src/server.js",
    "start:bg": "NODE_ENV=production nohup node src/server.js > app.log 2>&1 &",
    "stop": "pkill -f 'node src/server.js'",
    "restart": "npm run stop && npm run start:bg",
    "status": "pgrep -f 'node src/server.js'",
    "logs": "tail -f app.log"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.4"
  }
}